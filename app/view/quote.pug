- const business = require("/app/business-card.json");

include utils/definitions
script(src=require("/app/js/form-processor.js"))
+webpage('quote')
  section.mx-auto.container.group
    div.text-right
      include fragments/_contact-mediums-menu
    div(class="group-has-[#show-request-quote-form:checked]:hidden lg:grid lg:grid-cols-2")
      div.text-center(class="lg:col-start-2 self-center")
        h1(class="lg:text-40px").font-sanspro.font-black.text-red.text-25px.uppercase Each location has it's#[br]#[span.text-blue own security needs]
        p(class="lg:text-24px lg:max-w-[384px]").mx-auto.font-barlow.font-semibold.leading-fit.text-18px.text-justify Tell us more about your security concerns so we can get started on a plan to address them
        p(class="lg:text-18px lg:max-w-[330px]").mx-auto.font-assistant.text-16px.font-medium.leading-normal Your time is valuable and we will make sure to get back to you as soon as posible
      img(src=require("assets/img/building-and-camera.png") class="lg:col-start-1 lg:row-start-1 lg:row-span-2")
      div(class="lg:col-start-2 text-center self-center")
        a(class="lg:text-36px").font-barlow.text-25px.font-semibold.leading-fit.contact-phone(href=`${business['contact-mediums'].telephone}`) #[h2 HTS #{business['contact-mediums'].telephone.replace(/^tel:\/\//, "")}]
        input#show-request-quote-form(type="checkbox").hidden
        label(for="show-request-quote-form")(class="lg:text-24px hover:cursor-pointer hover:shadow-sm max-w-[230px] p-[15_5_15_5]").rounded.inline-block.text-white.bg-red.text-18px.font-bold.leading-normal.shadow-bg Request a quotation
    div#form-wrapper.hidden(class="group-has-[#show-request-quote-form:checked]:block")
      div
        h1(class="lg:text-48px").font-sanspro.text-35px.font-black.uppercase Request a #[span.text-red quotation]
        form#quote-request(action=`${business['form-submit']}`)
          div.input-identification(class="lg:text-14px").font-assistant.text-10px.text-ehite.font-bold.leading-normal
            div.input-wrapper
              label(for="name") Name
              input(id="name", name="name" )
            div.input-wrapper
              label(for="email") Email
              input(id="email", name="email")
            div.input-wrapper
              label(for="phone") Phone
              input(id="phone", name="email")
            div.input-wrapper
              label(for="zip-code") Zip code
              input(id="zip-code", name="zip-code")
            div.select-wrapper
              label(for="usage") Building usage
              select.text-black(id="usage", name="usage")
                option(value="business") Business
                option(value="residence") Residence
          div.input-building-specs.textarea-wrapper(class="lg:text-14px").font-assistant.text-10px.text-white.font-bold.leading-normal
            label(for="square-footage") Square footage of building and size of surrounding property
            textarea(id="square-footage")
          div.input-security-concerns.textarea-wrapper(class="lg:text-14px").font-assistant.text-10px.text-white.font-bold.leading-normal
            label(for="concerns") What are your security concerns
            textarea(id="concerns")
          div.business-contact
            button(class="lg:text-14px").text-white.font-assistant.text-10px.font-bold.leading-normal.blue-button(onclick="assambleEmail()") Send
            div.business-card
              img.logo(src=require("logo") class="w-[80px] lg:w-[111px]")
              div.business-address
                h1(class="lg:text-48px").font-sanspro.font-bold.leading-fit.text-30px HTS
                address(class="lg:text-18px").font-assistant.text-14px.leading-relaxed #{business.address.street_line} #[br] #{business.address.city} #{business.address.state}, #{business.address.zip_code}, #{business.address.country} #[br] #{business['contact-mediums'].telephone}

